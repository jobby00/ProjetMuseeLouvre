{% extends "JDLouvreBundle::layout.html.twig" %}
{% block title %}
    Page réservation - {{ parent() }}
{% endblock %}
{% block body %}
    <div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h4 id="containers">Réservation</h4>
        </div>
        <div class="bs-component">
            <div class="jumbotron">
                {{ include('@JDLouvre/LouvreReservation/Templates/errors.html.twig') }}
                <div class="row">
                    <div class="row">

                        {{ form_start( form, {'attr': {'class': 'col-sm-6 col-sm-offset-3' }}) }}

                        {{ form_errors(form) }}

                        <div class="form-group">
                            {{ form_label(form.email, 'Votre adresse Email') }}
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.nbBillets, 'Nombre de billets souhaité') }}
                            {{ form_errors(form.nbBillets) }}
                            {{ form_widget(form.nbBillets, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {{ form_widget(form.Suivant, {'attr': {'class': 'btn btn-primary'}}) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}